{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "mapRoot": "./dist",
    "sourceRoot": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "incremental": true,
    "noImplicitAny": false,
    "removeComments": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./src/**/*.spec.ts",
    "./dist"
  ]
}
