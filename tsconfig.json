{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "sourceRoot": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "incremental": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.spec.ts"
  ]
}
