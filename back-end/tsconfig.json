{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution":"node",
    "outDir": "./dist",
    "strict": true,
    "removeComments": false,
    "declaration": true,
    "rootDir": "./src",
    "baseUrl":"./src",
    "esModuleInterop": true,
    "sourceMap": true,
    "sourceRoot": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "lib": [
      "es5",
      "es6"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./src/**/*.spec.ts",
    "./dist"
  ]
}
