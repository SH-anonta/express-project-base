{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "removeComments": false,
    "declaration": true,
    "rootDir": "./src",
    "esModuleInterop": true,
    "sourceMap": true,
    "sourceRoot": "./src"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./src/**/*.spec.ts",
    "./dist"
  ]
}
